<div class="products">
    <div class="productsList">
        {{#each products}}
        <div class="productCard">
            <img src="{{this.thumbnail}}" alt="{{this.title}}">
            <h2>{{this.title}}</h2>
            <p>{{this.category}}</p>
            <p>{{this.description}}</p>
            <p><strong>${{this.price}}</strong></p>
        </div>
        {{/each}}
    </div>

    {{#if hasPrevPage}}
    <a class="prev"></a>
    <a href="/products?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

    {{#if hasNextPage}}
    <a class="next"></a>
    <a href="/products?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}
</div>